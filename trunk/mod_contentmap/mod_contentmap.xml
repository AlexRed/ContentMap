<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5">
	<name>ContentMap</name>
	<author>Turismo.eu</author>
	<creationDate>15 March 2009</creationDate>
	<copyright>Copyright (C) 2005 - 2009 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>info@joomla.it</authorEmail>
	<authorUrl>www.turismo.eu</authorUrl>
	<version>1.0.0</version>
	<description>CIAO FROM ITALY</description>
	<files>
		<filename module="mod_contentmap">mod_contentmap.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>  
		<filename>gmapez-2.5.js</filename>	
		<filename>gmapez-2.5_1.js</filename>
		<filename>gmapez-2.5_2.js</filename>  		
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
		<filename>tmpl/contentmap.css</filename>		
		<filename>img/logo3.png</filename>	
		<filename>img/progressbar.png</filename>
		<filename>img/marker-AQUA-DOT.png</filename>
		<filename>img/marker-BLUE-DOT.png</filename>
		<filename>img/marker-GREEN-DOT.png</filename>
		<filename>img/marker-GRAY-DOT.png</filename>
		<filename>img/marker-RED-DOT.png</filename>
		<filename>img/marker-WHITE-DOT.png</filename>
		<filename>img/marker-YELLOW-DOT.png</filename>
		<filename>img/marker-ORANGE-DOT.png</filename>
		<filename>img/marker-PURPLE-DOT.png</filename>
	</files>
	    <!-- Language files -->
	<languages>
        <language tag="en-GB">en-GB.mod_contentmap.ini</language>
        <language tag="it-IT">it-IT.mod_contentmap.ini</language>
    </languages>
	<params>
		<param name="apikey" type="text" default="" label="APIKEY" description="APIKEYDESC" size="60" />
		<param name="mapwidth" type="text" default="600" label="MAPWIDTH" description="MAPWIDTHDESC" />
		<param name="mapheight" type="text" default="400" label="MAPHEIGHT" description="MAPHEIGHTDESC" />
		<param name="maptype" type="radio" default="G_NORMAL_MAP" label="MAP TYPE" description="MAP TYPE DESC">
			<option value="G_NORMAL_MAP">MAPPA</option>
			<option value="G_SATELLITE_MAP">SATELLITE</option>
			<option value="G_HYBRID_MAP">IBRIDA</option>
		</param>
		<param name="overviewmap" type="radio" default="1" label="OVERVIEW MAP" description="OVERVIEW MAP DESC">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="count" type="text" default="150" label="COUNT" description="THE NUMBER OF ITEMS TO DISPLAY (DEFAULT 150)" />
		<param name="ordering" type="list" default="m_dsc" label="Ordering" description="Ordering options">
			<option value="m_dsc">Recently Modified First</option>
			<option value="c_dsc">Recently Added First</option>
	  	</param>
		<param name="user_id" type="list" default="0" label="Authors" description="A filter for the authors">
			<option value="0">Anyone</option>
			<option value="by_me">Added or modified by me</option>
			<option value="not_me">Not added or modified by me</option>
	  	</param>
		<param name="data" type="radio" default="1" label="ARTICLE DATE" description="ARTICLE DATE DESC">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		<param name="indirizzo" type="radio" default="0" label="AUTHOR ALIAS" description="AUTHOR ALIAS DESC">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		<param name="marker" type="list" default="orange" label="MARKER COLOUR" description="MARKER COLOUR DESC">
			<option value="*">ORANGEMARKER</option>
			<option value="WHITE">WHITEMARKER</option>
			<option value="YELLOW">YELLOWMARKER</option>
			<option value="BLUE">BLUEMARKER</option>
			<option value="RED">REDMARKER</option>
			<option value="GRAY">GREYMARKER</option>
			<option value="GREEN">GREENMARKER</option>
			<option value="PURPLE">PURPLEMARKER</option>
			<option value="AQUA">JOOMLAMARKER</option>
	  	</param>
		<param name="menu" type="list" default="0" label="IN CASE OF SEF ACTIVATED" description="IN CASE OF SEF ACTIVATED DESC">
			<option value="0">TOP LEVEL ITEM</option>
			<option value="1">SUBMENU ITEM FIRST LEVEL WITH SEF ACTIVATED</option>
			<option value="2">SUBMENU ITEM SECOND LEVEL WITH SEF ACTIVATED</option>
	  	</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="show_front" type="radio" default="1" label="Frontpage Items" description="PARAMFRONTPAGEITEMS">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		<param name="secid" type="text" default="" label="Section ID" description="PARAMSECTIONID" />
		<param name="catid" type="text" default="" label="Category ID" description="PARAMCATEGORYID" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>
